# Module name
obj-m := @KMODULE_NAME@.o

# Disable BTF generation (vmlinux not available)
BTF_OBJS :=

# Compiler flags
ccflags-y := -Wall -Wextra -std=gnu99

# Enable debugging symbols in debug builds
ifeq ($(DEBUG),1)
    ccflags-y += -DDEBUG -g
endif

# Module information
MODULE_LICENSE := GPL
MODULE_AUTHOR := Bryan Kemp
MODULE_DESCRIPTION := S0ix Power Mode Transition Driver
MODULE_VERSION := 1.0

# Build rules
all:
	$(MAKE) -C $(KERNEL_SRC) M=$(PWD) modules

clean:
	$(MAKE) -C $(KERNEL_SRC) M=$(PWD) clean

install:
	$(MAKE) -C $(KERNEL_SRC) M=$(PWD) modules_install

.PHONY: all clean install

